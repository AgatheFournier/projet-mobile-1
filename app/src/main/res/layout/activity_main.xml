<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context=".NewActivity">

    <TextView
        android:id="@+id/main_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recherche :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#184b97"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="81dp" />

    <Button
        android:layout_width="79pt"
        android:layout_height="40pt"
        android:text="Artistes (A-Z)"
        android:id="@+id/buttonArtistes"
        android:onClick="onClick"
        android:layout_marginTop="168dp"
        android:background="@color/accent_material_dark"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:layout_width="79pt"
        android:layout_height="40pt"
        android:text="Lieux (A-Z)"
        android:id="@+id/button2"
        android:background="#96cbf3"
        android:layout_alignTop="@+id/buttonArtistes"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="79pt"
        android:layout_height="40pt"
        android:text="Dates"
        android:id="@+id/button3"
        android:background="#edafaf"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:layout_width="79pt"
        android:layout_height="40pt"
        android:text="Ma recherche"
        android:id="@+id/button4"
        android:onClick="onClick"
        android:background="#aceb74"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All evenements"
        android:id="@+id/button5"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#f19c60" />




</RelativeLayout>
